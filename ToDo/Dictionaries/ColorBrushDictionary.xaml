<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ToDo.Dictionaries">
    <Color x:Key="BluePurple">#6074C3</Color>
    <Color x:Key="Pink">#AC395D</Color>
    <Color x:Key="Turquoise">#166F6B</Color>
    <Color x:Key="LightGreen">#1E7D4D</Color>
    <Color x:Key="Red">#CB5651</Color>
    <Color x:Key="Blue">#6377C6</Color>

    <SolidColorBrush x:Key="BluePurpleBrush" Color="{StaticResource BluePurple}" />
    <SolidColorBrush x:Key="PinkBrush" Color="{StaticResource Pink}" />
    <SolidColorBrush x:Key="TurquoiseBrush" Color="{StaticResource Turquoise}" />
    <SolidColorBrush x:Key="LightGreenBrush" Color="{StaticResource LightGreen}" />
    <SolidColorBrush x:Key="RedBrush" Color="{StaticResource Red}" />
    <SolidColorBrush x:Key="BlueBrush" Color="{StaticResource Blue}" />
</ResourceDictionary>